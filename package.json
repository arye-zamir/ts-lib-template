{
  "name": "typescript-library-template",
  "version": "1.0.0",
  "description": "Modern TypeScript library template with tsdown, Vitest, and ESLint v9",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "library",
    "template",
    "tsdown",
    "vitest",
    "esm",
    "cjs"
  ],
  "author": "Arye Zamir",
  "maintainers": [
    {
      "name": "Arye Zamir",
      "email": "arye.zamir@gmail.com"
    }
  ],
  "license": "ISC",
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "pnpm@10.19.0",
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
